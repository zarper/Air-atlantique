<Window x:Class="MaltAirAtlantique.AcceuilView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirAtlantiqueFormation"
        mc:Ignorable="d"
        Title="Acceuil" Height="500" Width="500">
    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontStyle" Value="Italic" />
        </Style>

    </Window.Resources>
    <Grid Margin="0,0,2,1">
        <Menu IsMainMenu="True" Background="White" Height="23" VerticalAlignment="Top" FontFamily="Stencil" Foreground="Red" Margin="21,10,19,0" HorizontalAlignment="Center" BorderBrush="Black" FontSize="21.333">
            <MenuItem Header="_Acceuil"  />
            <MenuItem Header="_Employee" />
            <MenuItem Header="_Formation" />
            <MenuItem Header="_Session" />
        </Menu>
        <ListView x:Name="listView" Margin="10,76.333,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
